generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AppointmentType {
  CONSULTATION
  EXAM
  TREATMENT
}

model User {
  id             Int       @id @default(autoincrement())
  name           String
  birthday       DateTime
  phone          String
  email          String    @unique
  createdAt      DateTime  @default(now())
  disease        String
  diagnosisDate  DateTime
  username      String   @unique
  password      String
  symptoms       Symptom[]
  appointments   Appointment[]
  options        SymptomOption[]
  moods          Mood[]
}

model SymptomOption {
  id       Int       @id @default(autoincrement())
  name     String
  user     User      @relation(fields: [userId], references: [id])
  userId   Int
  symptoms Symptom[]

  @@unique([userId, name]) 
}

model Symptom {
  id               Int             @id @default(autoincrement())
  user             User            @relation(fields: [userId], references: [id])
  userId           Int

  symptomOption    SymptomOption   @relation(fields: [symptomOptionId], references: [id])
  symptomOptionId  Int

  severity         Int
  note             String?
  createdAt        DateTime        @default(now())
}

model Appointment {
  id            Int       @id @default(autoincrement())
  user          User      @relation(fields: [userId], references: [id])
  userId        Int
  type          AppointmentType
  doctor        String?
  title         String  
  location      String
  date          DateTime
  note          String?
  createdAt     DateTime   @default(now())

  @@unique([id, userId])
}

model Mood {
  id        Int      @id @default(autoincrement())
  label     String
  date      DateTime @default(now())
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

